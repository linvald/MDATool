public class ClassAction extends AbstractAction {
	private ToolBarActionFactory toolBarActionFactory;

	
	protected ClassAction(){
		super("Class");
		putValue(Action.SMALL_ICON, new ImageIcon(ClassAction.class.getResource("./img/class.gif")));	
	}
	public void actionPerformed(ActionEvent e){
		Main.getInstance().setStatus("Class tool selected...");
		UmlShape uml = new UmlShape(300,100,200,150,Color.black, Color.PINK);

		Main.getInstance().setStatus("Trying to add shape to canvas from ClassAction - frame is " + Main.getInstance().getActiveCanvasFrame());
		Main.getInstance().getActiveCanvasFrame().addShape(uml);
		Main.getInstance().getActiveCanvasFrame().repaintShape(uml);
		
		
	}
}
